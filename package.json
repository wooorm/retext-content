{
  "name": "retext-content",
  "version": "0.1.1",
  "description": "Append, prepend, remove, and replace content into/from Retext nodes",
  "keywords": [
    "retext",
    "content"
  ],
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "retext-range": "^0.1.0"
  },
  "devDependencies": {
    "eslint": "^0.8.0",
    "istanbul": "^0.3.0",
    "jscs": "^1.5.0",
    "mocha": "^1.20.0",
    "retext": "^0.1.0",
    "retext-ast": "^0.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wooorm/retext-content.git"
  },
  "scripts": {
    "test": "node_modules/.bin/_mocha --reporter spec --check-leaks -u exports spec/retext-content.spec.js",
    "test-travis": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha --report lcovonly -- --reporter spec --check-leaks -u exports spec/retext-content.spec.js",
    "lint": "npm run lint-api && npm run lint-test && npm run lint-style",
    "lint-api": "node_modules/.bin/eslint index.js --env node --env browser --rule 'quotes: [2, single]'",
    "lint-test": "node_modules/.bin/eslint spec/retext-content.spec.js --env node --env mocha --rule 'quotes: [2, single]'",
    "lint-style": "node_modules/.bin/jscs index.js spec/retext-content.spec.js --reporter=inline",
    "coverage": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- -- spec/retext-content.spec.js",
    "install-browser-test": "npm install browserify",
    "build-browser-test": "node_modules/.bin/browserify spec/retext-content.spec.js -o spec/browser.spec.js",
    "make": "npm run lint && npm run coverage"
  },
  "testling": {
    "files": "spec/retext-content.spec.js",
    "harness": "mocha",
    "browsers": [
      "iexplore/latest",
      "chrome/latest",
      "chrome/canary",
      "firefox/latest",
      "firefox/nightly",
      "opera/latest",
      "opera/next",
      "safari/latest",
      "iphone/latest",
      "android-browser/latest"
    ]
  }
}
